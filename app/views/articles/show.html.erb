<h1><%= @article.title%>
<%= link_to article_path(@article),
data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
  <i class="fa-regular fa-trash-can"></i>
<% end %>
<%= link_to edit_article_path(@article) do %>
<i class="fa-solid fa-pencil"></i>
<% end %></h1>

<p><%= @article.content %></p>
